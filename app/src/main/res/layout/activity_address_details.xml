<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.AddressDetailsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header_layout">



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_txt"
            android:text="Add New Address"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/white"
            android:textSize="24sp"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/address_txt"
            app:layout_constraintBottom_toBottomOf="@id/address_txt"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="10dp"
        android:id="@+id/loginDetailsCardView"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="-24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/flat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mainText"
            android:text="Flat, House no.,Building"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/flat_edt"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/flat_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_square"
            android:hint=""
            />

        <androidx.appcompat.widget.AppCompatTextView
                        app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flat_edt"
            android:id="@+id/area_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mainText"
            android:text="Area, Street, Village"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/area_edit_text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/area_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_square"
            android:hint=""
            />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/area_edit_text"
            android:id="@+id/landmark_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mainText"
            android:text="Landmark"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/landmark_edit_txt"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/landmark_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_square"
            android:hint=""
            />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/landmark_edit_txt"
            android:id="@+id/pincode_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mainText"
            android:text="Pincode"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/pincode_edt_txt"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/pincode_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_square"
            android:hint=""
            />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pincode_edt_txt"
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mainText"
            android:text="City"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/city_editText"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/city_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_square"
            android:hint=""
            />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_editText"
            android:id="@+id/state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mainText"
            android:text="State"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/state_edit_txt"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/state_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_square"
            android:hint=""
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_btn"
            app:cornerRadius="24dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@+id/state_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Address"
            android:textStyle="bold"
            android:textColor="@color/white"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>