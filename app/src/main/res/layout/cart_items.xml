<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:background="@color/backgroundAd"
    android:layout_height="wrap_content">


<androidx.constraintlayout.widget.ConstraintLayout
android:elevation="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/agarbati1"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_name"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintTop_toTopOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_semibold"
        android:textColor="@color/mainText"
        android:textSize="18sp"
        android:text="Agarbatti"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintBottom_toTopOf="@id/quantity_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:text="\u20B9 200.00"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quantity_txt"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@id/product_image"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"/>



    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginHorizontal="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/quantity_txt"
        android:id="@+id/add_quantity"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_bg"
        android:src="@drawable/ic_add"
        android:padding="5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintRight_toLeftOf="@id/add_quantity"
        android:id="@+id/quantity"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_semibold"
        android:textSize="16sp"
        android:text="1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/minus_quantity"
        app:layout_constraintRight_toLeftOf="@id/quantity"
        app:layout_constraintBottom_toBottomOf="@id/quantity_txt"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_bg"
        android:src="@drawable/ic_minus"
        android:padding="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>