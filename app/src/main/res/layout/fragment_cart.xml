<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".fragments.CartFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categories_txt"
        android:text="@string/my_cart"
        android:fontFamily="@font/metropolis_bold"
        android:textColor="@color/mainText"
        android:textSize="28sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="20dp"
        android:id="@+id/cartRecycler"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categories_txt"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="-24dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/total_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis_semibold"
            android:text="Total Items:"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginVertical="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginVertical="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_item_label"
                android:id="@+id/delivery_fees_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_semibold"
                android:text="Delivery Fees:"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginVertical="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_items"
                android:id="@+id/delivery_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 99.00"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginVertical="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_fees_label"
                android:id="@+id/total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_semibold"
                android:text="Total:"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginVertical="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_fees"
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9  500.00"/>



            <com.google.android.material.button.MaterialButton
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/total_label"
                android:id="@+id/checkout_btn"
                app:cornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/checkout"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/checkout_btn"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>