<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".products.ui.ProductDetailsActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:scaleType="fitXY"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/animationView"
        app:lottie_fileName="lottie.json"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


   <androidx.appcompat.widget.AppCompatImageView
       android:id="@+id/back"
       android:layout_marginTop="40dp"
       android:layout_marginHorizontal="20dp"
       android:elevation="10dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="24dp"
       android:layout_height="24dp"
       android:src="@drawable/ic_back"
       android:padding="5dp"
       android:background="@drawable/transparent_circle_bg"
       app:layout_constraintLeft_toLeftOf="parent"
       android:tint="@color/white"/>
    <ScrollView
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addToCartLayout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/product_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/agarbati1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_name"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agarbatti"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/product_price"
                android:textSize="24sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_bold"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_price"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 200"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="24sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mrp_price"
                android:background="@drawable/strike_through"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 200"
                app:layout_constraintTop_toTopOf="@id/product_price"
                app:layout_constraintBottom_toBottomOf="@id/product_price"
                app:layout_constraintLeft_toRightOf="@id/product_price"
                android:textSize="18sp"
                android:textColor="@color/mainText"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quantity_txt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 2"
                app:layout_constraintTop_toBottomOf="@id/product_price"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_semibold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/variant_label"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Variants"
                app:layout_constraintTop_toBottomOf="@id/quantity_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_semibold"/>



                <EditText
                    android:textColor="@color/mainText"
                    android:hint="Choose variant"
                    android:focusable="false"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_edit_text"
                    app:layout_constraintTop_toBottomOf="@id/variant_label"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:id="@+id/variant_editText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description_txt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                app:layout_constraintTop_toBottomOf="@id/variant_editText"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_semibold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                android:lineSpacingExtra="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Great product for great fragrance for your pooja and its best.A Great product for great fragrance for your pooja and its best.A Great product for great fragrance for your pooja and its best"
                app:layout_constraintTop_toBottomOf="@id/description_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="16sp"
                android:textColor="@color/mainText"
                android:fontFamily="@font/metropolis_m"/>

            <RadioGroup
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/addToCartLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/minus_quantity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_bg"
            android:src="@drawable/ic_minus"
            android:padding="5dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/minus_quantity"
            android:id="@+id/selectedQuantity"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis_semibold"
            android:textSize="16sp"
            android:text="1"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_quantity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/circle_bg"
            android:padding="5dp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/selectedQuantity"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCart_btn"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Add To Cart"
            android:textStyle="bold"
            android:textColor="@color/white"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>