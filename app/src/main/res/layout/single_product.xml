<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginVertical="10dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/backgroundAd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productImage_singleProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/agarbati1"
            />

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/productAddToFav_layout"
        android:elevation="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/transparent_circle_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/productAddToFav_singleProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_favorite"
             />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/discount_singleProduct"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        >
        <TextView
            android:id="@+id/discountTv_singleProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10% off"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="5dp"
        android:id="@+id/product_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

<!--        <RatingBar-->
<!--            android:id="@+id/productRating_singleProduct"-->
<!--            style="@style/Widget.AppCompat.RatingBar.Indicator"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="30dp"-->
<!--            android:numStars="5"-->
<!--            android:rating="5"-->
<!--            android:scaleX=".4"-->
<!--            android:scaleY=".4"-->
<!--            android:transformPivotX="0dp"-->
<!--            android:transformPivotY="15dp" />-->



        <TextView
            android:id="@+id/productName_singleProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Cycle Pure Agarbati"

            android:textColor="@color/mainText"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/productQuantity_singleProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:text="1 Pack"
            android:textColor="@color/textAd"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/productPrice_singleProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:text="\u20B9 100.00"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="16sp" />




    </LinearLayout>

    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/top_left_rounded_corner"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/minus_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="14sp"
            android:fontFamily="@font/metropolis_semibold"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>