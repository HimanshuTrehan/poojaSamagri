<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header_layout">



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categories_txt"
            android:text="@string/profile"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="@color/white"
            android:textSize="24sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="10dp"
        android:id="@+id/loginDetailsCardView"
        app:cardCornerRadius="24dp"
        android:layout_marginBottom="-24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/profile_details_layout"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <androidx.appcompat.widget.AppCompatImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/transparent_circle_bg"
                    android:src="@drawable/logo"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textColor="@color/mainText"
                    android:textSize="24sp"
                    android:fontFamily="@font/metropolis_semibold"
                    app:layout_constraintLeft_toRightOf="@id/profile_img"

                    app:layout_constraintTop_toTopOf="@id/profile_img"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="+91 9876543210"
                    android:textColor="@color/textAd"
                    android:textSize="16sp"
                    android:fontFamily="@font/metropolis_semibold"
                    app:layout_constraintLeft_toRightOf="@id/profile_img"

                    app:layout_constraintTop_toBottomOf="@id/name_txt"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/profile_details_layout">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edit_profile_img"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_person"
                    android:tint="@color/primary"
                    app:layout_constraintTop_toTopOf="parent"
                   />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="16sp"
                    android:textColor="@color/mainText"
                    app:layout_constraintLeft_toRightOf="@id/edit_profile_img"
                    app:layout_constraintTop_toTopOf="@id/edit_profile_img"
                    app:layout_constraintBottom_toBottomOf="@id/edit_profile_img"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/expand_icon"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/ic_forward"
                    android:padding="5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edit_profile_img"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/hidden_profile_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/edit_profile_img"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="20dp"
                    >


                <androidx.appcompat.widget.AppCompatEditText
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/name_editText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableTint="@color/primary"
                    android:text="Jane Doe"
                    android:textColor="@color/mainText"
                    android:drawablePadding="10dp"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/city_editText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/name_editText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:drawableStart="@drawable/ic_location"
                    android:drawableTint="@color/primary"
                    android:text="Hyderabad"
                    android:textColor="@color/mainText"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/login_btn"
                        app:cornerRadius="24dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/city_editText"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:text="@string/update"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout

               app:layout_constraintTop_toBottomOf="@id/edit_profile_layout"
               android:layout_marginTop="16dp"
               android:id="@+id/orders_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/order_img"
                   app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/ic_shopping_bag"
                   android:tint="@color/primary"
                   />


               <androidx.appcompat.widget.AppCompatTextView
                   android:layout_marginStart="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="My Orders"
                   android:textSize="16sp"
                   android:textColor="@color/mainText"
                   app:layout_constraintLeft_toRightOf="@id/order_img"
                   app:layout_constraintTop_toTopOf="@id/order_img"
                   app:layout_constraintBottom_toBottomOf="@id/order_img"/>

               <androidx.appcompat.widget.AppCompatImageView
                   android:layout_width="24sp"
                   android:layout_height="24sp"
                   android:background="@drawable/circle_bg"
                   android:src="@drawable/ic_forward"
                   android:padding="5dp"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"/>

           </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactUs_layout"
                app:layout_constraintTop_toBottomOf="@id/orders_layout"
                android:layout_marginTop="16dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/contact_img"
                    app:layout_constraintLeft_toLeftOf="parent"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_support"
                    android:tint="@color/primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help Center"
                    android:textSize="16sp"
                    android:textColor="@color/mainText"
                    app:layout_constraintLeft_toRightOf="@id/contact_img"
                    app:layout_constraintTop_toTopOf="@id/contact_img"
                    app:layout_constraintBottom_toBottomOf="@id/contact_img"/>

<!--                <androidx.appcompat.widget.AppCompatImageView-->
<!--                    android:layout_width="24sp"-->
<!--                    android:layout_height="24sp"-->
<!--                    android:background="@drawable/circle_bg"-->
<!--                    android:src="@drawable/ic_forward"-->
<!--                    android:padding="5dp"-->
<!--                    app:layout_constraintRight_toRightOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"/>-->

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logout_layout"
                app:layout_constraintTop_toBottomOf="@id/contactUs_layout"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logout_img"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_logout"
                    android:tint="@color/primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/mainText"
                    app:layout_constraintLeft_toRightOf="@id/logout_img"
                    app:layout_constraintTop_toTopOf="@id/logout_img"
                    app:layout_constraintBottom_toBottomOf="@id/logout_img"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

